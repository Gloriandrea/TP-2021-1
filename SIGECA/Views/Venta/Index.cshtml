@model SIGECA.Controllers.VentaController.ModelVenta
@{
    ViewData["Title"] = "Gestionar Ventas";
}

<h2 class="mt-3">Compras</h2>
<div class="row">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Gestionar Ventas</li>
            </ol>
        </nav>
    </div>
    <div class="col">
        <button class="btn btn-primary float-right" data-toggle="modal" data-target="#modalRegistrarVenta" onclick="clearDataVenta();"><i class="fas fa-plus"></i> Agregar Venta</button>
    </div>
</div>
<p style="color:gray;">Hay @Model.ventas.Count() ventas registradas</p>
<table id="tableVenta" class="table datatable-venta">
    <thead class="thead-light">
        <tr>
            <th scope="col">Codigo de Venta</th>
            <th scope="col">Costo</th>
            <th scope="col">Fecha Registro</th>
            <th scope="col">Estado</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
</table>

<div class="modal" id="modalRegistrarVenta" tabindex="-1" aria-labelledby="registrarVentaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registrarUsuarioLabel">Registrar Nueva Compra</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="cerrarModal();" aria-label="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" style="padding: 5px 5%">
                    <div class="col-3 col-sm-3 col-lg-3 col-xl-3">
                        <label class="form-label">Tipo de Cliente: </label>
                    </div>
                    <div class="col-3 col-sm-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="usuarioRadio" value="usuario" name="customRadioInline" class="custom-control-input">
                            <label class="custom-control-label" for="usuarioRadio">Usuario</label>
                        </div>
                    </div>
                    <div class="col-3 col-sm-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="clienteRadio" value="cliente" name="customRadioInline" class="custom-control-input">
                            <label class="custom-control-label" for="clienteRadio">Cliente</label>
                        </div>
                    </div>
                    <div class="col-3 col-sm-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="sinDocumentoRadio" value="sinDocumentos" name="customRadioInline" class="custom-control-input">
                            <label class="custom-control-label" for="sinDocumentoRadio">Sin Documento</label>
                        </div>
                    </div>
                </div>
                <div id="usuarioForm" class="row" style="padding: 5px 5%; display:none;">
                    <div class="col-6 col-sm-6 col-lg-6 col-xl-6">
                        <label for="usuario" class="form-label">Usuario: </label>
                        <select class="form-select form-control" id="proveedorCompraRegistrar" name="usuario" aria-label="Default select example">
                            @foreach (var usuario in Model.usuarios)
                            {
                                if (usuario.tipoUsuario == "Cliente")
                                {
                                    <option value="@usuario.id">@usuario.datos.nombre @usuario.datos.apellido</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-6 col-sm-6 col-lg-6 col-xl-6">
                        <label for="dniUsuario" class="form-label">N° DNI: </label>
                        <input class="form-control" type="text" id="dniUsuario" name="dniUsuario" disabled />
                    </div>
                </div>
                <div id="clienteForm" class="row" style="padding: 5px 5%; display: none;">
                    <div class="col-6 col-sm-6 col-lg-6 col-xl-6">
                        <label for="nombreCliente" class="form-label">Cliente: </label>
                        <input class="form-control" type="text" id="nombreCliente" name="nombreCliente" />
                    </div>
                    <div class="col-6 col-sm-6 col-lg-6 col-xl-6">
                        <label for="dniCliente" class="form-label">N° DNI: </label>
                        <input class="form-control" type="text" id="dniCliente" name="dniCliente"/>
                    </div>
                </div>
                <hr />
                <div class="row" style="padding: 5px 5%">
                    <div class="col-6 col-sm-4">
                        <label for="producto" class="form-label">Producto: </label>
                        <select class="form-select form-control" id="productoVentaRegistrar" onchange="cambioProductoRegistrar();" name="producto" aria-label="Default select example">
                            @foreach (var producto in Model.productos)
                            {
                                <option selected value="@producto.id">@producto.nombre</option>
                            }
                        </select>
                    </div>
                    <div class="col-6 col-sm-2">
                        <label for="cantidadItem" class="form-label">Cantidad:</label>
                        <input class="form-control" id="cantidadVentaRegistrar" onblur="cambioCantidadRegistrar();" name="cantidadItem">
                    </div>
                    <div class="col-6 col-sm-2">
                        <label for="costoItem" class="form-label">Costo:</label>
                        <input class="form-control" id="costoVentaRegistrar" name="costoItem">
                    </div>
                    <div class="col-6 col-sm-1" style="display:flex">
                        <a class="btn btn-primary" id="agregaritemCompra" onclick="addItem();" style="align-self:flex-end"><i class="fas fa-plus"></i></a>
                    </div>
                </div>
                <hr />
                <table id="itemVenta" class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Nombre del producto</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Costo</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <br />
                <div style="text-align: right">
                    <h2>Total: S/. <span id="itemRegistrarTotal">0.00</span></h2>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row" style="padding: 5px 5%;width:100%">
                    <div class="col-6 col-sm-6 col-lg-6 col-xl-6">
                        <button type="button" onclick="cerrarModal();" class="btn btn-block btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                    <div class="col-6 col-sm-6 col-lg-6 col-xl-6">
                        <button type="button" class="btn btn-block btn-primary" id="btnRegistrarVentaModal">
                            Registrar Venta
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="URL_VentasListarTodos" value="@Url.Action("ObtenerVentas", "Venta")" />
<input type="hidden" id="URL_ObtenerProductoPorID" value="@Url.Action("ObtenerProductoPorId", "Producto")" />
@section scripts{
    <script src="~/js/Venta/GestionarVenta.js"></script>
}