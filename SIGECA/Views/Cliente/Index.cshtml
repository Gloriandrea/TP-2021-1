<div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <div class="card bg-pattern">
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-xl-6 col-sm-6">
                                        <div class="p-sm-3">
                                            <h4 class="mt-3 mt-lg-0">Registrar Cliente</h4>
                                            <form action="#">
                                                <div class="form-group mb-3">
                                                    <label for="fullname">Nombre de usuario</label>
                                                    <input class="form-control" type="text" id="fullname" placeholder="Ingrese su nombre" required>
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="emailaddress2">Correo Electronico</label>
                                                    <input class="form-control" type="email" id="emailaddress" required placeholder="Ingrese su correo">
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="password">Contraseña</label>
                                                    <input class="form-control" type="password" required id="password" placeholder="Ingrese la contraseña">
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="password2">Contraseña</label>
                                                    <input class="form-control" type="password" required id="password2" placeholder="Confirmar contraseña">
                                                </div>
                                                <div class="form-group mb-0">
                                                    <button class="btn btn-success btn-sm float-sm-right" type="submit"> Sign Up </button>
                                                    <div class="custom-control custom-checkbox pt-1">
                                                        <input type="checkbox" class="custom-control-input" id="checkbox-signup">
                                                        <label class="custom-control-label" for="checkbox-signup">I accept <a href="javascript: void(0);" class="text-dark">Terms and Conditions</a></label>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        
                                    </div> <!-- end col -->
                                    <div class="col-xl-6 col-sm-6">
                                        <div class="p-sm-3">
                                            <img src="https://www.iconpacks.net/icons/1/free-user-login-icon-305-thumb.png" class="img-fluid" alt="Responsive image" width ="100%" >
                                        </div>
                                        
                                    </div> <!-- end col -->
                                </div>
                                <!-- end row-->

                            </div> <!-- end card-body -->
                        </div>
                        <!-- end card -->

                    </div> <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end page -->

